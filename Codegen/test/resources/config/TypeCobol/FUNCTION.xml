<?xml version="1.0" encoding="UTF-8"?>
<skeletons>

  <skeleton name="FUN.CALL">
    <conditions>
      <condition node="TypeCobol.Compiler.CodeElements.FunctionUser"/>
    </conditions>
    <patterns>
      <!--pattern location="data.working.start" group="$FUNCTION.lib" var="program=$FUNCTION.program,copy=$FUNCTION.copy"-->
      <pattern location="data.working.start" group="$FUNCTION.lib" var="function=$function">
01 %function.Copy COPY %function.Copy.
01 %function.Program PIC X(08) VALUE '%function.Program'.
      </pattern>
      <pattern location="data.working.start" group="functions">
01 RETURN-CODE PIC X(08).
      </pattern>
      <pattern location="data.working.start" group="$FUNCTION.name" var="type=$function.Result.Definition">
01 %function.Name-RESULT %function.Result.Definition.
      </pattern>
      <pattern location="procedure.start" group="$FUNCTION.lib">
IF %function.Copy-POINTER-TABLE = LOW_VALUE
    CALL %function.Program USING %function.Copy
END-IF
      </pattern>
      <pattern location="NODE" action="replace">
@{
  var funparams = "";
  foreach (var p in %function.Parameters) {
    funparams += "    BY " + p.Mode + " " + p.Value + "\n";
  }
}
CALL %function.Name USING
@funparams
    BY REFERENCE RETURN-CODE
    BY REFERENCE %function.Name-RESULT

IF RETURN-CODE = ZERO
* TODO original statement like MOVE or stuff
ELSE
*    TODO: error management
END-IF
      </pattern>
    </patterns>
  </skeleton>

</skeletons>