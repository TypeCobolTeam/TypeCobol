<?xml version="1.0" encoding="UTF-8"?>
<skeletons>

  <skeleton name="BOOL.DECLARE">
    <conditions>
      <condition node="TypeCobol.Compiler.CodeElements.DataDescriptionEntry" type="BOOL"/>
    </conditions>
    <patterns>
      <pattern location="NODE" action="replace" var="LEVEL=$level,NAME=$NAME">
%LEVEL  %NAME-value PIC X VALUE LOW-VALUE.
  88  %NAME       VALUE 'T'.
  88  %NAME-false VALUE 'F'.
      </pattern>
    </patterns>
  </skeleton>

  <skeleton name="BOOL.SET">
    <conditions>
      <condition node="TypeCobol.Compiler.CodeElements.SetStatement" sender.type="boolean" sender="FALSE"/>
    </conditions>
    <patterns>
      <pattern location="NODE" action="replace" var="NAME=$receiver.name">
SET %NAME-false TO TRUE.
      </pattern>
    </patterns>
  </skeleton>

</skeletons>